model Admin{
  id      Int      @id @default(autoincrement())
  name    String   @unique
  ismale  Boolean?
  role    Role     @default(PENGURUS)
  lat     Float?
  lng     Float?
  posts   Jamaah[]

}

model Jamaah{
  id Int @id @default(autoincrement())
  name String
  ismale Boolean?
  age Int
  province String
  group String
  pengurus Admin @relation(fields: [namaPengurus],references: [name])
  namaPengurus String 
  lat Float? 
  lng Float?
  temp Float?
  humid Float?
}

enum Role {
  ADMIN
  PENGURUS
}